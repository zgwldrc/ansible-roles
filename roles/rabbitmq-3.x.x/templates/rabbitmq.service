[Unit]
Description="{{systemd_name}} {{version}}"
Requires=network-online.target
After=network-online.target

[Service]
EnvironmentFile=-{{home}}/.env
User={{user}}
Group={{group}}
WorkingDirectory={{home}}
ExecStart={{home}}/sbin/rabbitmq-server {{home}}/etc/rabbitmq/rabbitmq.conf
ExecStop={{home}}/sbin/rabbitmqctl shutdown
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
