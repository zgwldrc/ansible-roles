[Unit]
Description=rocketmq namesrv service
After=network.target

[Service]
Type=simple
EnvironmentFile={{home}}/conf/.env
PassEnvironment=JAVA_HOME PATH
ExecStart={{ home }}/bin/mqbroker -c {{ home }}/conf/broker.conf
ExecStop={{ home }}/bin/mqshutdown broker
RemainAfterExit=yes

LimitNOFILE=655350
LimitMEMLOCK=infinity

Restart=always
RestartSec=5s
[Install]
WantedBy=multi-user.target