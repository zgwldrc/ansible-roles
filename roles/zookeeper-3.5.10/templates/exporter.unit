[Unit]
Description=zookeeper exporter
After=network.target

[Service]
Type=simple
User={{user}}
Group={{group}}
ExecStart={{exporter_home}}/zookeeper-exporter -listen {{ansible_default_ipv4.address}}:{{exporter_listen_port}} -zk-hosts {% for host in ansible_play_hosts| sort() %}{{hostvars[host]['ansible_default_ipv4']['address']}}:2181{% if not loop.last %},{% endif %}{% endfor +%}

[Install]
WantedBy=multi-user.target