[Unit]
Description="{{zk_systemd_name}} {{version}}"
Requires=network-online.target
After=network-online.target

[Service]
EnvironmentFile=-{{home}}/.env
Environment="KAFKA_HEAP_OPTS={{zk_heap_opts}}"
User={{user}}
Group={{group}}
WorkingDirectory={{home}}
ExecStart={{zk_exec_start}}
{% if exec_stop %}
ExecStop={{zk_exec_stop}}
{% endif %}
Restart={{zk_restart}}
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
